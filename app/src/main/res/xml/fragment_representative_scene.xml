<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <!-- TODO: Add visual styling and content -->

        <Constraint android:id="@id/guideline" />
        <Constraint android:id="@id/search_title" />
        <Constraint android:id="@id/address_line_1" />
        <Constraint android:id="@id/address_line_2" />
        <Constraint android:id="@id/city" />
        <Constraint android:id="@id/state" />
        <Constraint android:id="@id/zip" />
        <Constraint android:id="@id/button_search" />
        <Constraint android:id="@id/button_location" />
        <Constraint android:id="@id/representative_title" />
        <Constraint android:id="@id/representative_list" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <!-- TODO: Add visual styling and content -->

        <Constraint
            android:id="@id/guideline"
            android:translationY="-300dp" />
        <Constraint
            android:id="@id/search_title"
            app:layout_constraintBottom_toTopOf="@id/address_line_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline" />
        <Constraint
            android:id="@id/address_line_1"
            app:layout_constraintBottom_toTopOf="@id/address_line_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/address_line_2"
            app:layout_constraintBottom_toTopOf="@id/city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/state"
            app:layout_constraintBottom_toBottomOf="@id/city"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/city"
            app:layout_constraintTop_toTopOf="@id/city" />
        <Constraint
            android:id="@id/city"
            app:layout_constraintBottom_toTopOf="@id/zip"
            app:layout_constraintEnd_toStartOf="@id/state"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/zip"
            app:layout_constraintBottom_toTopOf="@id/button_search"
            app:layout_constraintEnd_toStartOf="@id/state"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@id/button_search"
            app:layout_constraintBottom_toTopOf="@id/button_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@id/button_location"
            app:layout_constraintBottom_toTopOf="@id/representative_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="wrap_content"
            android:id="@id/representative_title"
            app:layout_constraintBottom_toTopOf="@id/representative_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@id/representative_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/representative_title" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragUp"
            app:touchAnchorId="@id/representative_list" />
    </Transition>
</MotionScene>
